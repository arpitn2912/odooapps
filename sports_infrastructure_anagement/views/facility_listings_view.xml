<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="facility_listings_tree_view" model="ir.ui.view">
            <field name="name">facility.listings.tree</field>
            <field name="model">facility.listings</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="availability_date_begin"/>
                    <field name="availability_date_end"/>
                </tree>
            </field>
        </record>

        <record id="facility_listings_kanban_view" model="ir.ui.view">
            <field name="name">facility.listings.kanban</field>
            <field name="model">facility.listings</field>
            <field name="arch" type="xml">
                <kanban class="o_event_kanban_view"  sample="1">
                    <field name="name"/>
                    <field name="availability_date_begin"/>
                    <field name="availability_date_end"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="d-flex flex-column p-0 oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_content p-0 m-0 position-relative row d-flex flex-fill">
                                    <div class="col-3 text-bg-primary p-2 text-center d-flex flex-column justify-content-center">
                                        <div t-esc="luxon.DateTime.fromISO(record.availability_date_begin.raw_value).toFormat('d')" class="o_event_fontsize_20"/>
                                        <div>
                                            <t t-esc="luxon.DateTime.fromISO(record.availability_date_begin.raw_value).toFormat('MMM yyyy')"/>
                                        </div>
                                        <div><t t-esc="luxon.DateTime.fromISO(record.availability_date_begin.raw_value).toFormat('t')"/></div>
                                            <div t-if="record.availability_date_begin.raw_value !== record.availability_date_end.raw_value">
                                                <i class="fa fa-arrow-right me-2 o_event_fontsize_09" title="End date"/>
                                                <t t-esc="luxon.DateTime.fromISO(record.availability_date_end.raw_value).toFormat('d MMM')"/>
                                            </div>
                                    </div>
                                    <div class="col-9 py-2 px-3 d-flex flex-column justify-content-between pt-3">
                                        <div>
                                            <div class="o_kanban_record_title o_text_overflow" t-att-title="record.name.value">
                                                <field name="name"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
             </field>
         </record>

         <record id="facility_listings_calendar_view" model="ir.ui.view">
            <field name="name">facility.listings.calendar</field>
            <field name="model">facility.listings</field>
            <field name="arch" type="xml">
                <calendar date_start="availability_date_begin" date_stop="availability_date_end" string="Event Organization" mode="month">
                    <field name="name" avatar_field="avatar_128"/>
                </calendar>
            </field>
         </record>

        <record id="facility_listings_form_view" model="ir.ui.view">
            <field name="name">facility.listings.form</field>
            <field name="model">facility.listings</field>
            <field name="arch" type="xml">
                    <form>
                        <header>
                            <button name="approved" type="object" string="Approve"/>
                            <button name="cancelled" type="object" string="cancel"/>
                            <field name="state" widget="statusbar" readonly="1"/>
                        </header>
                        <sheet>
                            <div name="button_box">
                                <button class="oe_stat_button" type="object" name="get_games" icon="fa-gamepad">
                                    <field string="Games" name="facility_booked_ids" widget="statinfo"/>
                                </button>
                            </div>
                            <div class="oe_title">
                                <label for="name" string="Facility Name"/>
                                <h1><field class="text-break" name="name" required="1" placeholder="e.g. Large Indoor Facilities"/></h1>
                            </div>
                            <group>
                                <group>   
                                    <label for="availability_date_begin" string="Date"/>
                                    <div class="o_row">
                                        <field name="availability_date_begin" required="1" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'availability_date_end'}"/>
                                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                        <field name="availability_date_end" required="1" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'availability_date_begin'}"/>
                                    </div>
                                    <field name="is_limit_facility_providing"/>
                                    <field name="number_of_people" attrs="{'invisible': [('is_limit_facility_providing', '=', False)]}"/>
                                    <field name="state_id"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
            </field>
        </record>

        <record id="view_facility_listings_filter" model="ir.ui.view">
            <field name="name">facility.listings.search</field>
            <field name="model">facility.listings</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"
                           string="Facility Name"
                           filter_domain="[('name', 'ilike', self)]"/>
                </search>
             </field>
         </record>

        <record id="action_facility_listings" model="ir.actions.act_window">
            <field name="name">Facility Listings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">facility.listings</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
        </record>

        <menuitem id="menu_main" name="Sports Infrastructure Management"/>
        <menuitem id="menu_facility_listings" name="Facility Listings" parent="menu_main" action="action_facility_listings"/>

    </data>
</odoo>
